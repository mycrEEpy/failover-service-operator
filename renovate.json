{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "kubernetes": {
    "fileMatch": ["config/.+\\.yaml$"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["k8s.io/.*"],
      "groupName": "k8s.io",
      "allowedVersions": "<=0.25"
    }
  ]
}
